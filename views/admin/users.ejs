<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Users Registered</title>
    </head>
    <body>
        <h1>User Roles Management</h1>

        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Current Role</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                <tr>
                    <td><%= user._id %></td>
                    <td><%= user.username %></td>
                    <td><%= user.role %></td>
                    <td>
                        <form
                            action="/admin/users/<%= user._id %>/update-role?_method=PUT"
                            method="POST"
                        >
                            <select name="newRole">
                                <option value="<%= USER %>">User</option>
                                <option value="<%= ADMIN %>">Admin</option>
                                <option value="<%= GUEST %>">Guest</option>
                            </select>
                            <button type="submit">Update Role</button>
                        </form>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>

        <a href="/">Back to Home</a>
    </body>
</html>
